# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# List all people
GET     /people                     controllers.PeopleController.index
GET     /people/new                 controllers.PeopleController.add
GET     /people/:id                 controllers.PeopleController.show(id: Long)
GET     /people/:id/edit            controllers.PeopleController.edit(id: Long)
POST    /people                     controllers.PeopleController.create
PUT     /people/:id                 controllers.PeopleController.update(id: Long)
DELETE  /people/:id                 controllers.PeopleController.destroy(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
